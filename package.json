{
  "name": "first-light",
  "version": "0.1.0",
  "description": "An atmospheric constellation discovery game viewed through an antique telescope",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun build src/main.ts --outdir public --watch --sourcemap",
    "build": "bun build src/main.ts --outdir public --minify",
    "serve": "bun --hot run serve.ts",
    "start": "bun run build && bun run serve",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "keywords": [
    "game",
    "constellation",
    "astronomy",
    "canvas",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}